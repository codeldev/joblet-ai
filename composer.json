{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "alaouy/youtube": "^2.2.5",
        "cjmellor/browser-sessions": "^1.3.1",
        "claude-php/claude-3-api": "^0.1.23",
        "embed/embed": "^4.4.17",
        "guzzlehttp/guzzle": "^7.9.3",
        "intervention/image": "^3.11.3",
        "laravel/cashier": "^15.6.4",
        "laravel/framework": "^12.16.0",
        "laravel/prompts": "^0.3.5",
        "laravel/tinker": "^2.10.1",
        "livewire/flux": "^2.1.6",
        "livewire/flux-pro": "^2.1.6",
        "livewire/livewire": "^3.6.3",
        "openai-php/client": "^0.12.0",
        "openai-php/laravel": "^0.12.0",
        "panphp/pan": "^0.1.8",
        "resend/resend-php": "^0.17.0",
        "spatie/browsershot": "^5.0.10",
        "spatie/db-dumper": "^3.8",
        "spatie/laravel-csp": "^3.13",
        "spatie/laravel-ray": "^1.40.2",
        "spatie/laravel-sluggable": "^3.7.5",
        "spatie/pdf-to-text": "^1.54",
        "treblle/security-headers": "^0.0.3",
        "ueberdosis/commonmark-embed-extension": "^0.2.1",
        "voku/stop-words": "^2.0.1",
        "yaza/laravel-google-drive-storage": "^4.1",
        "zanysoft/laravel-zip": "^3.0.1"
    },
    "require-dev": {
        "fakerphp/faker": "^1.24.1",
        "jonasschen/laravel-lang-monitor": "^2.1",
        "larastan/larastan": "^3.4.0",
        "laravel/pail": "^1.2.2",
        "laravel/pint"                     : "^1.22.1",
        "laravel/sail"                     : "^1.43.1",
        "mockery/mockery"                  : "^1.6.12",
        "nunomaduro/collision"             : "^8.8",
        "peckphp/peck"                     : "^0.1.3",
        "pestphp/pest"                     : "^3.8.2",
        "pestphp/pest-plugin-laravel"      : "^3.2",
        "pestphp/pest-plugin-stressless"   : "^3.1",
        "pestphp/pest-plugin-type-coverage": "^3.5.1",
        "rector/rector"                    : "^2.0.16",
        "roave/security-advisories"        : "dev-latest",
        "ext-gd"                           : "*"
    },
    "autoload": {
        "files": [
            "app/Helpers/GeneralHelpers.php",
            "app/Helpers/ErrorHelpers.php",
            "app/Helpers/FakeHelpers.php"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "lint"            : "pint",
        "refactor"        : "rector",
        "test:unit"       : "pest --parallel --coverage --exactly=100 --bail",
        "test:unit:types" : "pest --parallel --type-coverage --exactly=100 --bail",
        "test:types"      : "phpstan",
        "test:lint"       : "pint --test",
        "test:typos"      : "peck --path=lang",
        "test:refactor"   : "rector --dry-run",
        "test" : [
            "@test:unit",
            "@test:lint",
            "@test:types",
            "@test:refactor",
            "@test:typos"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "repositories": {
        "flux-pro": {
            "type": "composer",
            "url": "https://composer.fluxui.dev"
        }
    }
}
